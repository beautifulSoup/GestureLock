<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.tangotkk.gesturelock.sample.GestureSetupActivity">



    <com.tangotkk.gesturelock.library.GestureIndicatorView
        android:id="@+id/indicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:indicator_circle_radius="2.5dp"
        android:layout_gravity="center_horizontal"
        app:color_selected="@color/colorSelected"
        app:color_unselected="@color/colorUnselected"
        app:circle_stroke_width="1dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:textSize="12sp"
        tools:text="请再次绘制手势密码"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <com.tangotkk.gesturelock.library.LockPatternView
        android:id="@+id/lock_pattern"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        app:error_color="@color/colorError"
        app:normal_color="@color/colorUnselected"
        app:correct_color="@color/colorSelected"
        app:draw_arrow="false"
        app:path_line_width="1dp"
        app:center_round_radius="10dp"
        app:circle_radius="25dp"
        android:layout_marginTop="30dp"

        />



</LinearLayout>
